@model GuardaCultura.Models.Miradouro

@{
    ViewData["Title"] = "Create";
}


<section class="wrapper style3 container special">
    <header>
        <h1>Criar Miradouro</h1>
        <hr />
    </header>
    <body>
        <div class="row centrado">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div class="fields">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>@*sumario de erros*@
                        <div class="form-group field half">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>@*validacao de campo*@
                        </div>
                        <div class="form-group field half">
                            <label asp-for="Localizacao" class="control-label"></label>
                            <input asp-for="Localizacao" class="form-control" />
                            <span asp-validation-for="Localizacao" class="text-danger"></span>@*validacao de campo*@
                        </div>
                        <div class="form-group field half">
                            <label asp-for="Coordenadas_gps" class="control-label"></label>
                            <input asp-for="Coordenadas_gps" class="form-control" />
                            <span asp-validation-for="Coordenadas_gps" class="text-danger"></span>@*validacao de campo*@
                        </div>
                        <div class="form-group field half">
                            <label asp-for="Terreno" class="control-label"></label>
                            <input asp-for="Terreno" class="form-control" />
                            <span asp-validation-for="Terreno" class="text-danger"></span>@*validacao de campo*@
                        </div>
                        <div class="form-group form-check field half">
                            <label>E_Miradouro</label>
                            
                            <select asp-for="E_Miradouro" class="form-control">
                                <option value="true">Sim</option>
                                <option value="false">Não</option>
                            </select>
                            @*<input class=" form-check-input" asp-for="E_Miradouro" /> @Html.DisplayNameFor(model => model.E_Miradouro)*@
                        </div>
                        <div class="form-group field half">
                            <label asp-for="Condicoes" class="control-label"></label>
                            <input asp-for="Condicoes" class="form-control" />
                            <span asp-validation-for="Condicoes" class="text-danger"></span>@*validacao de campo*@
                        </div>
                        <div class="form-group field half">
                            <label asp-for="Ocupacao_maxima" class="control-label"></label>
                            <input asp-for="Ocupacao_maxima" class="form-control" />
                            <span asp-validation-for="Ocupacao_maxima" class="text-danger"></span>@*validacao de campo*@
                        </div>
                        <div class="form-group field half">
                            <label asp-for="Descricao" class="control-label"></label>
                            <input asp-for="Descricao" class="form-control" />
                            <span asp-validation-for="Descricao" class="text-danger"></span>@*validacao de campo*@
                        </div>
                    </div>
                    <footer class="major">
                        <div>
                            <input type="submit" value="Criar" class="btn btn-primary" />
                            <a asp-action="Index" class="button btn-primary">Voltar</a>
                        </div>
                    </footer>
                </form>
            </div>
        </div>
    </body>
</section>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
