@model IEnumerable<GuardaCultura.Models.Pessoa>

@{
    ViewData["Title"] = "Index";
}



<p>
    @*<a asp-action="Create">Create New</a>*@
</p>
<section class="wrapper style3 container special">
    <header class="major">
        <h1>Lista de Utilizadores</h1>
    </header>
    <body>
        <table class="table" id="tabelaconfig">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ultima_Lingua)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Data_Nasc)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sexo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nacionalidade)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Fiabilidade)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.Funcao)
                    </th>*@
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ultima_Lingua)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Data_Nasc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sexo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nacionalidade)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fiabilidade)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.Funcao.FuncaoDesempenhar)
                        </td>*@
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.PessoaId">Editar</a> |
                            <a asp-action="Details" asp-route-id="@item.PessoaId">Detalhes</a> |
                            <a asp-action="Delete" asp-route-id="@item.PessoaId">Bloquear</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </body>
</section>
