@model GuardaCultura.Models.Ocupacao

@{
    ViewData["Title"] = "Create";
}

<section class="wrapper style3 container special">
    <header class="major">
        <h1>Criar Ocupacao</h1>
        <hr />
    </header>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div class="fields">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group field half">
                        <label asp-for="Numero_pessoas" class="control-label"></label>
                        <input asp-for="Numero_pessoas" class="form-control" />
                        <span asp-validation-for="Numero_pessoas" class="text-danger"></span>
                    </div>
                    <div class="form-group field half">
                        <label asp-for="Data" class="control-label"></label>
                        <input asp-for="Data" class="form-control" />
                        <span asp-validation-for="Data" class="text-danger"></span>
                    </div>
                    <div class="form-group field half">
                        <label asp-for="MiradouroId" class="control-label"></label>
                        <select asp-for="MiradouroId" class="form-control" asp-items="ViewBag.MiradouroId"></select>
                    </div>
                    <div class="form-group field half">
                        <label asp-for="HoraId" class="control-label"></label>
                        <select asp-for="HoraId" class="form-control" asp-items="ViewBag.HoraId"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
