@model IEnumerable<GuardaCultura.Models.Hora>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Horas)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Horas)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HoraId">Edit</a> |@*Botao Editar*@
                <a asp-action="Details" asp-route-id="@item.HoraId">Details</a> |@*Botao Detalhes*@
                <a asp-action="Delete" asp-route-id="@item.HoraId">Delete</a>@*Botao Apagar*@
            </td>
        </tr>
}
    </tbody>
</table>
